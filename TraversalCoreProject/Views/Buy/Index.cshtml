@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Ödeme Bilgileri</h4>
                </div>
                <div class="card-content">
                    <div class="card-body">
                        <p class="card-text">Ödeme bilgilerinizi aşağıdan giriniz</p>

                        <form method="post">
                            <div class="form-group">
                                <label for="cardNumber">Kredi Kartı Numarası:</label>
                                <input type="text" id="cardNumber" name="cardNumber" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label for="expiryDate">Son Kullanma Tarihi:</label>
                                <input type="text" id="expiryDate" name="expiryDate" placeholder="MM/YYYY" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label for="cvv">CVV:</label>
                                <input type="text" id="cvv" name="cvv" class="form-control" required>
                            </div>
                            <button type="submit" class="btn btn-primary">Ödemeyi Tamamla</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
